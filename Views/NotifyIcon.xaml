<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="MFAWPF.Views.NotifyIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
    xmlns:converters="clr-namespace:MFAWPF.Helper.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:MFAWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:MFAWPF.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <hc:NotifyIcon
        Name="notifyIcon"
        Text="{lex:Loc AppTitle}"
        Visibility="Visible">
        <hc:NotifyIcon.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Header="{lex:Loc StartTask}"
                    Name="startMenu"
                    Visibility="{c:Binding '!IsRunning'}" />
                <MenuItem
                    Header="{lex:Loc StopTask}"
                    Name="stopMenu"
                    Visibility="{c:Binding 'IsRunning'}" />
                <MenuItem Header="{lex:Loc SwitchLanguage}" Name="switchLangMenu" />
                <MenuItem
                    Header="{lex:Loc Hide}"
                    Name="hideMenu"
                    Visibility="{c:Binding 'IsVisible'}" />
                <MenuItem
                    Header="{lex:Loc Show}"
                    Name="showMenu"
                    Visibility="{c:Binding '!IsVisible'}" />
                <MenuItem Header="{lex:Loc Quit}" Name="exitMenu" />
            </ContextMenu>
        </hc:NotifyIcon.ContextMenu>
    </hc:NotifyIcon>
</UserControl>