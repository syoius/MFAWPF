<controls:CustomWindow
    Height="370"
    Width="300"
    mc:Ignorable="d"
    x:Class="MFAWPF.Views.UI.Dialog.AddTaskDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:MFAWPF.Views.UserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialog="clr-namespace:MFAWPF.ViewModels.UI.Dialog"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:MFAWPF.ViewModels"
    xmlns:ui="clr-namespace:MFAWPF.ViewModels.UI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <controls:CustomWindow.DataContext>
        <dialog:AddTaskDialogViewModel />
    </controls:CustomWindow.DataContext>
    <Border
        Background="{DynamicResource SecondaryBackgroundColor}"
        BorderBrush="{DynamicResource GrayColor1}"
        BorderThickness="1"
        CornerRadius="10">

        <hc:SimpleStackPanel>
            <Border
                Background="{DynamicResource MainContentBackgroundBrush}"
                ClipToBounds="False"
                CornerRadius="10 10 0 0"
                x:Name="TitleBar">
                <Grid Height="34">
                    <TextBlock
                        FontSize="17"
                        FontWeight="Bold"
                        Foreground="{StaticResource SecondaryBorderBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,0"
                        Text="{lex:LocText ButtonAdd}"
                        VerticalAlignment="Center" />
                    <Button
                        Click="Close"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Height="22"
                        HorizontalAlignment="Right"
                        Margin="0,4,4,0"
                        Padding="0"
                        Style="{StaticResource ButtonIcon}"
                        VerticalAlignment="Top"
                        Width="22"
                        hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                        x:Name="CloseButton" />
                </Grid>
            </Border>

            <hc:SimpleStackPanel Margin="15,10,15,0" Orientation="Vertical">
                <StackPanel Height="26" Orientation="Horizontal">
                    <TextBlock
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="{StaticResource GrayColor4}"
                        Margin="0,0,0,0"
                        Text="{lex:Loc Task}"
                        VerticalAlignment="Center" />
                </StackPanel>

                <hc:SearchBar
                    IsRealTime="True"
                    Margin="4"
                    SearchStarted="SearchBar_OnSearchStarted"
                    Style="{StaticResource SearchBarPlus}"
                    Tag="{Binding ElementName=ListBoxDemo}"
                    hc:InfoElement.Placeholder="{lex:Loc EnterTaskName}"
                    x:Name="SearchBar" />

                <ListBox
                    BorderThickness="0"
                    Height="205"
                    ItemsSource="{Binding DataList}"
                    Margin="5"
                    Name="ListBoxDemo"
                    SelectedIndex="{Binding SelectedIndex}"
                    SelectionMode="Single">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="6,0,0,0" Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <hc:SimpleStackPanel
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0"
                    Orientation="Horizontal">
                    <Button
                        BorderThickness="0"
                        Click="Add"
                        Content="{lex:Loc ButtonAdd}"
                        FontSize="11"
                        Foreground="White"
                        Margin="0,0,0,5"
                        VerticalContentAlignment="Center"
                        Width="90">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBlueColor}" />
                                <Setter Property="Cursor" Value="Arrow" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Background" Value="{DynamicResource PrimaryLightBlueColor}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4"
                                    Height="30">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
                        Click="Close"
                        Content="{lex:Loc ButtonCancel}"
                        FontSize="11"
                        Foreground="{DynamicResource GrayColor1}"
                        Height="30"
                        Margin="20,0,10,5"
                        VerticalContentAlignment="Center"
                        Width="90"
                        x:Name="CancelButton" />

                </hc:SimpleStackPanel>
            </hc:SimpleStackPanel>
        </hc:SimpleStackPanel>
    </Border>
</controls:CustomWindow>